@model Notissimus_Task.Models.MusicOffer
@{
    ViewData["Title"] = Model.Title;
}

<div class="">
    <form method="post">
        <input asp-for="Id" type="hidden"/>
        <input asp-for="Url" type="hidden" />
        <input asp-for="Category" type="hidden" />
        <input asp-for="Currency" type="hidden" />

        <div class="container backgroundWhite pt-4">
            <div class="card" style="border:1px solid #000000; ">
                <div class="card-header bg-dark text-light ml-0 row container" style="border-radius: 0px;">
                    <div class="col-12 col-md-6">
                        <h1 class="text-white">@Model.Title</h1>
                    </div>
                    <div class="col-12 col-md-6 text-md-right">
                        <h1 class="text-warning">@Model.Price.ToString("C0")</h1>
                    </div>
                </div>
                <div class="card-body">
                    <div class="container rounded p-2">
                        <div class="row">
                            <div class="col-12 col-lg-4 p-1 text-center">
                                <img src="@Model.Picture" alt="Изображение" width="100%" class="rounded" />
                            </div>
                            <div class="col-12 col-lg-8">
                                <div class="row pl-3">

                                    <div class="col-12">
                                        <span class="badge p-3 border bg-success">@Model.Artist</span>
                                        <span class="badge p-3 border bg-success">@Model.Year</span>
                                        <span class="badge p-3 border bg-success">@Model.Media</span>

                                        @if (Model.Delivery == false)
                                        {
                                            <span class="badge p-3 border bg-danger">Доставки нет</span>
                                        }
                                        else
                                        {
                                            <span class="badge p-3 border bg-success">Доставляем</span>
                                        }
                                        <h3 class="text-success"></h3>

                                        <p class="text-secondary">@Model.Description</p>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-dark">
                    <div class="row">
                        <div class="col-12 col-md-6 pb-1 ">
                            <a asp-action="Index" asp-controller="Home" class="btn btn-success btn-square form-control btn-lg" style="height:50px;">Обратно к списку</a>
                        </div>
                        <div class="col-12 col-md-6 ">
                            <button type="submit" class="btn btn-info form-control btn-lg" style="height:50px;">Добавить в корзину</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>